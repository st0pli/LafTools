  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/modules/server2",
      "name": "Dev server2",
      "command": "npm run dev"
    },
    {
      "name": "Scan all",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/devtools/scripts/scan/scan-entry.js",
      "console": "integratedTerminal",
      "args": ["server"],
      "internalConsoleOptions": "neverOpen"
    },
    // npm run fe-extra
    {
      "name": "Extra Jobs",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}",
      "request": "launch",
      "command": "npm run fe-extra"
    },
    {
      "name": "Dev web2",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/modules/web2",
      "request": "launch",
      "command": "npm run dev"
    },
    {
      "name": "Build web2",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/modules/web2",
      "request": "launch",
      "command": "npm run build && npm run start"
    }
  ]
}
