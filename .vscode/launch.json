  "version": "0.2.0",
  "configurations": [
    {
      "name": "Scan",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dev/scripts/scan/scan-entry.js",
      "console": "integratedTerminal",
      "args": ["server"],
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Dev",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/modules/web2",
      "request": "launch",
      "command": "npm run dev"
    },
    {
      "name": "Build",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/modules/web2",
      "request": "launch",
      "command": "npm run build && npm run start"
    },
  ]
}
